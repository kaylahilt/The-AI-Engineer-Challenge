# Aethon AI Assistant Environment Variables
# Copy this file to .env and fill in your values

# OpenAI Configuration (Required)
OPENAI_API_KEY=sk-...your-openai-api-key-here...

# Langfuse Configuration (Required for advanced features)
# Get these from https://cloud.langfuse.com
LANGFUSE_PUBLIC_KEY=pk-lf-...your-public-key...
LANGFUSE_SECRET_KEY=sk-lf-...your-secret-key...
LANGFUSE_HOST=https://cloud.langfuse.com

# Feature Flags
# Set to false to run in fallback mode without Langfuse
REQUIRE_ADVANCED_FEATURES=true

# A/B Testing Configuration
# Control whether A/B testing is enabled
AB_TESTING_ENABLED=true
# Percentage of users to include in tests (0.0 to 1.0)
AB_TESTING_SPLIT=0.5

# Optional: Custom model configuration
# MODEL_NAME=gpt-4o-mini
# MODEL_TEMPERATURE=0.7
# MODEL_MAX_TOKENS=1000 